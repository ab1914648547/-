<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/res60dp">

    <LinearLayout
        android:background="@drawable/body_shape"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/res5dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/res5dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/course_name"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="生物"
                android:gravity="center_vertical"
                android:textSize="@dimen/res20dp"
                android:textColor="@color/black"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/clock_time_state"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/res20dp"
                android:textColor="@color/black"
                android:text="2022-04-16 16:00:00 已签到"
                android:layout_height="0dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/del_or_mod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/res25dp"
                android:text="删除"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>